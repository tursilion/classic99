FOR I=0 TO 9
  READ T(I),Y(I),X(I),D(I)
NEXT I

REPEAT
  CALL MCCLR(10)
  CALL SQUARE(0,0,8,63,4)
  FOR I=0 TO 9
    CALL BLIT(A(T(I)),Y(I),X(I)/10)
    X(I)=X(I)-D(I)

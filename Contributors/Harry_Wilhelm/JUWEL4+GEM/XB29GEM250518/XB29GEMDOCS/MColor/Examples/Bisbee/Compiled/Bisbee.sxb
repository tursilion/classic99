PRGRESTART:
CALL SCREEN(2)
CALL MCOLOR(10)


DIM A(5),T(10),X(10),Y(10),D(10) // Shapes-Address A, Types, X/Y Pos, Delta movement

CALL SHAPE(A(0),16,6,"00022000000001010000020000330011222CCCCCCCCCCCC1")
